---
import '../styles/global.css';
import Navbar from '../components/Navbar.tsx';
import Hero from '../components/Hero.astro';
import About from '../components/About.astro';
import WhatWeOffer from '../components/WhatWeOffer.astro';
import Features from '../components/Features.astro';
import CTA from '../components/CTA.astro';
import Footer from '../components/Footer.astro';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Kozy Komfort - Adult Foster Care</title>
		<meta name="description" content="Kozy Komfort provides exceptional adult foster care services in Battle Creek, MI. Comfort. Community. Care." />
	</head>

	<body>
		<Navbar client:load />
		<Hero />
		<About />
		<WhatWeOffer />
		<Features />
		<CTA />
		<Footer />

		<!-- Smooth scroll script for anchor links -->
		<script>
			document.addEventListener('DOMContentLoaded', () => {
				const links = document.querySelectorAll('a[href^="#"]');
				
				links.forEach(link => {
					link.addEventListener('click', (e) => {
						const href = link.getAttribute('href');
						if (href && href !== '#' && href !== '#careers') {
							e.preventDefault();
							const target = document.querySelector(href);
							if (target) {
								target.scrollIntoView({ behavior: 'smooth', block: 'start' });
							}
						}
					});
				});
			});
		</script>
	</body>
</html>
