---
import ImageCarousel from './ImageCarousel.tsx';

const carouselImages = [
	'/images/feature-section/feature-img_1.jpg',
	'/images/feature-section/feature-img_2.jpg',
	'/images/feature-section/feature-img_3.jpg',
	'/images/feature-section/feature-img_4.jpg',
	'/images/feature-section/feature-img_5.jpg',
	'/images/feature-section/feature-img_6.jpg',
	'/images/feature-section/feature-img_7.jpg',
	'/images/feature-section/feature-img_8.jpg',
	'/images/feature-section/feature-img_9.jpg',
	'/images/feature-section/feature-img_10.jpg',
	'/images/feature-section/feature-img_11.jpg',
	'/images/feature-section/feature-img_12.jpg',
	'/images/feature-section/feature-img_13.jpg',
	'/images/feature-section/feature-img_14.jpg',
	'/images/feature-section/feature-img_15.jpg',
	'/images/feature-section/feature-img_16.jpg',
];
---

<section id="home" class="py-20 bg-white" aria-labelledby="facility-heading">
	<div class="container mx-auto px-6 md:px-8 lg:px-4 section-container-margin">
		<div class="text-center mb-16">
			<h2 id="facility-heading" class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
				Our Facility
			</h2>
			<p class="text-xl text-gray-600 max-w-2xl mx-auto">
				Take a virtual tour of our warm and welcoming facility
			</p>
		</div>

		<div class="max-w-6xl mx-auto mb-16">
			<ImageCarousel client:load images={carouselImages} />
		</div>

		<!-- Visiting Hours and Mission Statement -->
		<div class="max-w-3xl mx-auto text-center">
			<div class="mb-8 pb-8 border-b border-gray-300">
				<h3 class="text-2xl md:text-3xl font-semibold text-gray-900 mb-4">
					Resident Visiting Hours:
				</h3>
				<p class="text-xl md:text-2xl text-gray-700 font-medium">
					8AM and 8PM
				</p>
			</div>

			<p class="text-lg md:text-xl text-gray-700 leading-relaxed italic">
				"It's our mission to help provide quality care for senior citizens across West Michigan."
			</p>
		</div>
	</div>
</section>

